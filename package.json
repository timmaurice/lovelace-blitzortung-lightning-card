{
  "name": "blitzortung-lightning-card",
  "version": "1.5.0",
  "description": "A custom Home Assistant card for displaying lightning strikes using Blitzortung data.",
  "keywords": [
    "home-assistant",
    "custom-card",
    "lightning",
    "blitzortung",
    "weather"
  ],
  "license": "MIT",
  "type": "module",
  "author": "Tim Maurice Bayer",
  "module": "src/blitzortung-lightning-card.ts",
  "scripts": {
    "build": "rollup -c",
    "check-format": "prettier --check .",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "NODE_ENV=production NODE_NO_WARNINGS=1 vitest",
    "watch": "rollup -c -w",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,json,md,scss}": "prettier --write"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/d3-array": "^3.2.1",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-selection": "^3.0.11",
    "@types/leaflet": "^1.9.20",
    "cssnano": "^7.1.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "lit": "^3.3.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup": "^4.48.1",
    "rollup-plugin-lit-css": "^6.0.0",
    "sass": "^1.90.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "leaflet": "^1.9.4",
    "vanilla-colorful": "^0.7.2"
  }
